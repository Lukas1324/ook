                    } else {
                        Instruction instruction1 = instruction.orElse(null);
                        interpreter.loadInstruction(instruction1);
                        prepareUpdate(instruction1);
                        interpreter.update();
                        completeUpdate(instruction1);

                    }

                }
            }
        }

